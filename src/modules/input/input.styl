.input
  display: block
  position: relative

  &__input,
  &__textarea,
  &__select .selectize-input
    display: block
    width: 100%
    background: #D8D8D8
    border: 1px solid transparent
    outline: 0
    font-size: 16px
    line-height: 1.2
    padding: 30px 15px 13px
    border-radius: 4px
    color: #505050
    anim()
    -webkit-appearance: none
    -moz-appearance: none
    appearance: none

    &:focus
      background: #F0F0F0
      border: 1px solid #F0F0F0

    /.focus ~ .input__label,
    /.has-items ~ .input__label,
    &:focus ~ .input__label,
    &:valid ~ .input__label,
    &:disabled ~ .input__label
      top: 10px
      font-size: 12px
      color: #505050

  &__textarea
    resize: none
    max-width: 100%
    min-width: 100%

  &__label
    display: block
    position: absolute
    color: #898989
    font-size: 15px
    left: 15px
    top: 22px
    pointer-events: none
    anim()

  &__error
    position: absolute
    top: 100%
    left: 0
    font-size: 13px
    font-weight: 300
    color: #e94c36

  .suggestions-wrapper
    position: absolute
    color: #4a4a4a
    font-size: 13px

  &--search
    &:after
      content: ''
      display: block
      background-image: url(../img/sprite-search.svg)
      position: absolute
      right: 5px
      top: 50%
      transform: translateY(-50%)
      pointer-events: none

    .input__input
      padding-top: 20px
      padding-bottom: 5px

      &:focus ~ .input__label,
      &:valid ~ .input__label,
      &:disabled ~ .input__label
        top: 6px

    .input__label
      top: 13px

  &--error
    .input__input,
    .selectize-input
    //.input__select
      border: 1px solid #E94C36
      color: #e94c36

    .input__label
      color: #e94c36

  &--select
    .selectize-input:after
      content: ''
      display: block
      background-image: url(../img/sprite-select-dropdown.svg)
      position: absolute
      right: 15px
      top: 50%
      margin-top: -4px
      transform-origin: 50% 50%
      pointer-events: none
      anim()

    .dropdown-active:after
      transform: rotate(180deg)

    .item
      display: inline-block
      max-width: 95%
      line-height: 1
      text-overflow: ellipsis
      white-space: nowrap
      overflow: hidden

    input
      outline: 0
      font-family: inherit
      font-size: inherit
      max-width: 100% !important;
      max-height: none !important;
      min-height: 0 !important;
      padding: 0 !important;
      margin: 0 1px !important;
      line-height: inherit !important;
      text-indent: 0 !important;
      background: none !important;
      border: 0 none !important;
      -webkit-box-shadow: none !important;
      box-shadow: none !important;
      -webkit-user-select: auto !important;

    .selectize-dropdown
      position: absolute
      background: #F5F5F5
      box-shadow: 0 10px 9px rgba(#000000, .18)
      z-index: 1000

    .selectize-dropdown-content
      max-height: 45px * 5.5
      overflow-y: auto
      overflow-x: hidden

    .option
      anim()
      height: 45px
      line-height: 1.2
      font-size: 15px
      color: #505050
      padding: 0 25px
      display: flex
      flex-direction: row
      align-items: center

  .option__rating
    margin-left: auto
    font-size: 13px
    color: #898989

    .active
      background: #E2E2E2
      cursor: pointer

  &--nolabel
    .selectize-input
      padding-top: 22px
      padding-bottom: 21px