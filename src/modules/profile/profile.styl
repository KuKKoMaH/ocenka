.profile
  flex: 1
  margin-left: 250px
  margin-right: 50px
  max-width: $container-lg

  @media (max-width: $breakpoint-sm - 1)
    margin-left: 0
    margin-right: 0

  &__wrapper
    position: fixed
    left: 0
    top: 112px
    bottom: 0
    width: 230px
    color: #ffffff

    @media (max-width: $breakpoint-sm - 1)
      max-width: 460px
      position: static
      width: auto
      background-color: transparent
      box-shadow: none
      margin: 0 auto

  &__logo
    padding: 24px 0 48px
    position: fixed
    top: 0
    left: 0
    width: 200px

    @media (max-width: $breakpoint-sm - 1)
      position: static
      width: 100%
      padding: 14px 0

    &:after
      content: ''
      display: block
      margin: 0 auto
      background-image: url(../img/sprite-logo.svg)

  &__info
    text-align: center
    padding: 0 20px
    margin-bottom: 40px

    @media (max-width: $breakpoint-sm - 1)
      margin-bottom: 20px

  &__profile
    text-align: center

  &__avatar
    overflow: hidden
    border-radius: 50%
    display: block
    margin: 0 auto 28px
    width: 114px
    max-width: 114px
    height: 114px

    @media (max-width: $breakpoint-sm - 1)
      margin-bottom: 8px

    img
      display: block

  &__name
    color: #4476B0
    font-size: 18px
    margin-bottom: 12px

    @media (max-width: $breakpoint-sm - 1)
      margin-bottom: 4px

  &__text
    font-size: 12px
    font-weight: 300
    color: #898989

  &__bonus
    color: #227eba
    font-size: 18px
    margin-left: 8px
    font-weight: 500

  &__stats
    padding: 0 20px
    width: 100%
    font-size: 14px

    @media (max-width: $breakpoint-sm - 1)
      width: 200px
      margin: 0 auto

    td
      padding-bottom: 12px
      vertical-align: top

      @media (max-width: $breakpoint-sm - 1)
        padding-bottom: 4px

  &__stat-row
    margin-bottom: 20px

  &__stat
    width: 130px
    display: inline-block
    vertical-align: middle

  &__count
    width: 1px
    font-weight: bold
    font-size: 14px
    background: #E94C36
    padding: 4px 8px
    border-radius: 12px

  &__top
    text-align: right
    margin: 30px 0

    @media (max-width: $breakpoint-sm - 1)
      text-align: center
      margin: 8px 0

  &__logout
    font-size: 14px
    margin-left: 23px
    background-color: transparent
    border: 0
    padding: 0
    cursor: pointer
    opacity: .6
    color: #ffffff
    anim()

    @media (max-width: $breakpoint-sm - 1)
      margin-left: 0

    &:before
      content: ''
      display: inline-block
      vertical-align: middle
      background-image: url(../img/sprite-cabinet.svg)
      margin-right: 8px

    &:hover
      opacity: 1

  &__menu
    display: flex
    align-items: center
    margin-bottom: 24px
    color: #ffffff
    @media (max-width: $breakpoint-sm - 1)
      display: none
      //padding: 0 8px
      //margin: 24px auto 12px
      //max-width: 460px
      //justify-content: center

  &__title
    flex: 1
    font-size: 17px

    @media (max-width: $breakpoint-sm - 1)
      display: none

  &__button
    height: 42px
    line-height: 40px
    border: 1px solid #979797
    background: transparent
    margin: 0
    padding: 0 20px
    color: #ffffff
    anim()
    border-radius: 21px
    cursor: pointer

    &:before
      content: ''
      display: inline-block
      background: url(../img/sprite-plus.svg)
      margin-right: 8px

    &:hover
      background: rgba(#D8D8D8, .28)
      border: 1px solid transparent

    @media (max-width: $breakpoint-sm - 1)
      display: none