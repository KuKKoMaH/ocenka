.partners-slider
  position: relative
  padding: 0 20px
  overflow: hidden

  img
    display: block
    margin: 0 auto
    width: auto !important

  .owl-carousel
    width: 100%

  .owl-prev, .owl-next
    position: absolute
    top: 50%
    z-index: 1
    width: 20px
    height: 50px
    margin-top: -16px
    opacity: .2
    anim()

    &:hover
      opacity: .7

  .owl-prev
    background: url(../img/sprite-arrow-left.svg)
    right: 100%

  .owl-next
    background: url(../img/sprite-arrow-right.svg)
    left: 100%