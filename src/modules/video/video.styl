.video
  background: linear-gradient(to bottom, #fff 0%, #fff 48%, #FAFAFA 48%, #FAFAFA 100%)
  padding-bottom: 140px

  .w
    display: flex
    flex-direction: row-reverse
    align-items: flex-start

    @media (max-width: $breakpoint-md - 1)
      flex-direction: column

  &__content
    flex: 1
    padding: 15px 0 0 100px

    @media (max-width: $breakpoint-lg - 1)
      padding-left: 15px

    @media (max-width: $breakpoint-md - 1)
      text-align: center
      padding: 0
      margin-bottom: 20px
      width: 100%

  &__title
    &:after
      margin-left: 3px

      @media (max-width: $breakpoint-md - 1)
        margin-left: auto

  &__text
    font-size: 17px
    color: #505050

  &__video
    box-shadow: 0 40px 50px -30px rgba(#C1C1C1, .7)
    width: 550px

    @media (max-width: $breakpoint-md - 1)
      width: 100%

  &__container
    position: relative
    padding-bottom: 56.25%
    overflow: hidden

    iframe
      position: absolute
      top: 0
      bottom: 0
      left: 0
      width: 100%
      height: 100%
      border: 0
