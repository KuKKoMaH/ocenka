.pagination
  margin-top: 40px
  text-align: center
  display: flex
  align-items: center
  justify-content: center
  font-size: 15px
  color: #fff

  &__page
    margin: 0 4px
    width: 24px
    height: 24px
    line-height: 24px
    display: block
    border-radius: 50%
    background-color: transparent
    cursor: pointer
    anim()

    &--active,
    &:hover
      background: #E94C36
      color: #ffffff

  &__sep
    margin: 0 8px

  &__prev:before,
  &__next:after
    content: ''
    display: inline-block
    vertical-align: middle
    margin: 0 4px
    anim()

  &__prev,
  &__next
    //cursor: pointer
    margin: 0 25px
    opacity: 0
    pointer-events: none

  &__prev
    &:before
      background-image: url(../img/sprite-prev.svg)
    &:hover
      &:before
        transform: translateX(-2px)

  &__next
    &:after
      background-image: url(../img/sprite-next.svg)
    &:hover
      &:after
        transform: translateX(2px)

  &__visible
    opacity: 1
    cursor: pointer
    pointer-events: auto